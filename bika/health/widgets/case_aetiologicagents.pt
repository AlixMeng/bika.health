<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="bika">
<body>
    <div id="folderlisting-main-table" class="template-caseaetiologicagents bika-listing-table-container">
        <input tal:replace="structure context/@@authenticator/authenticator" />
        <input type="hidden" name="CAE_submitted" value="1"/>
        <table class="bika-listing-table">
            <thead>
                <tr>
            		<th class="minwidth"></th>
                    <th i18n:translate="" class="fieldRequired">Aetiologic agent</th>
                    <th i18n:translate="">Description</th>
                    <th i18n:translate="">Subtype</th>
                </tr>
            </thead>
            <tbody class="item-listing-tbody"
            		tal:define="global index python:-1">
                <tr tal:repeat="row context/getAetiologicAgents">
                	<td class="minwidth">
                      	<input type="checkbox"
                      		tal:define="global index python:index+1;"
                      		tal:attributes="id python:'CAE_SelectItem-%s'%(index);
                      						name python:'CAE_SelectItem-%s'%(index);"/>
                      	<input type="hidden" name="CAE_STitle:list" tal:attributes="value row/Title"/>
                      	<input type="hidden" name="CAE_SDescription:list" tal:attributes="value row/Description"/>
                      	<input type="hidden" name="CAE_SSubtype:list" tal:attributes="value row/Subtype"/>
                    </td>
                    <td tal:content="row/Title"></td>
                    <td tal:content="row/Description"></td>
                    <td tal:content="row/Subtype"></td>
                </tr>
                <tr id="new">
                	<td class="minwidth"></td>
                    <td>
                         <input id="Title" type="text" autocomplete="off"/>
                         <input id="AgentUID" type="hidden"/>
                    </td>
                    <td><input id="Description" type="text" autocomplete="off" readonly="readonly" disabled="disabled"/></td>
                    <td><input id="Subtype" type="text" autocomplete="off" readonly="readonly" disabled="disabled"/></td>
                </tr>
            </tbody>
            <tfoot>
				<tr>
					<td colspan="5" style="padding:5px;">
						<input id="add_row" type="submit" i18n:attributes="value" value="Add" class="allowMultiSubmit"/>
						<tal:hasaetiologicagents tal:condition="python:hasattr(view, 'hasAetiologicAgents') and view.hasAetiologicAgents()">
							<input type="submit" name="CAE_delete" i18n:attributes="value" value="Delete selected" class="allowMultiSubmit"/>
							<input type="submit" name="CAE_clear"  i18n:attributes="value" value="Delete all" class="allowMultiSubmit"/>
						</tal:hasaetiologicagents>
				   </td>
				</tr>
			</tfoot>
        </table>
    </div>
</body>
</html>

<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="bika">
<body>

    <div id="folderlisting-main-table" class="template-patientidentifiers">
        <input tal:replace="structure context/@@authenticator/authenticator"/>
        <input type="hidden" name="PID_submitted" value="1"/>
        <div class="bika-listing-table-container">
            <table summary="Content listing" style="margin-bottom: 0px;"
                class="bika-listing-table">
                <thead>
                    <tr tal:condition="not:here/read_only">
                		<th tal:condition="not:here/read_only"></th>
                        <th id="foldercontents-identifier-column"
                        	class="fieldRequired" i18n:translate="">Identifier</th>
                        <th id="foldercontents-identifiertype-column"
                            class="column" i18n:translate="">Identifier Type</th>
                        <th id="foldercontents-identifiertypedescription-column"
                            class="column" i18n:translate="">Identifier Type Description</th>
                    </tr>
                    <tr tal:condition="here/read_only">
                		<th tal:condition="not:here/read_only"></th>
                        <th id="foldercontents-identifier-column" i18n:translate="">Identifier</th>
                        <th id="foldercontents-identifiertype-column" i18n:translate="">Identifier Type</th>
                        <th id="foldercontents-identifiertypedescription-column" i18n:translate="">Identifier Type Description</th>
                    </tr>
                </thead>
                <tbody class="item-listing-tbody"
                		tal:define="global index python:-1">
                    <tr tal:repeat="row context/getPatientIdentifiers">
                    	<td tal:condition="not:here/read_only">
                          	 <input class="noborder" type="checkbox"
                          		name="PID_SelectItem" id="PID_SelectItem"
                          		tal:define="global index python:index+1;"
                          		tal:attributes="
                          			id python:'PID_SelectItem-%s'%(index);
                          			name python:'PID_SelectItem-%s'%(index);"/>
                        </td>
                        <td colspan="1" rowspan="1" class="state-active Identifier" tal:content="row/Identifier"></td>
                        <td colspan="1" rowspan="1" class="state-active IdentifierType" tal:content="row/IdentifierType"></td>
                        <td colspan="1" rowspan="1" class="state-active IdentifierTypeDescription" tal:content="row/IdentifierTypeDescription"></td>
                    </tr>
                    <tr id="new" tal:condition="not:here/read_only">
                    	<td style="padding-bottom:15px;" tal:condition="not:here/read_only">&nbsp;</td>
                        <td colspan="1" rowspan="1" class="state-active Identifier">
                             <input class="wide" id="Identifier" name="Identifier" type="text" value="" autocomplete="off"/>
                        </td>
                        <td colspan="1" rowspan="1" class="state-active IdentifierType">
                             <input class="wide" id="IdentifierType" name="IdentifierType" type="text" value="" autocomplete="off"/>
                             <input type="hidden" id="IdentifierTypeUID" name="IdentifierTypeUID" value=""/>
                        </td>
                        <td colspan="1" rowspan="1" class="state-active IdentifierTypeDescription">
                             <input class="wide" id="IdentifierTypeDescription" name="IdentifierTypeDescription" type="text" value="" autocomplete="off"/>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
					<tr>
						<td class="noborder workflow_actions" colspan="5"  style="padding:5px;" tal:condition="not:here/read_only">
							<input class="action_button add_row allowMultiSubmit"
						       type="submit"
							   i18n:attributes="value"
							   value="Add" />
							<tal:hasidentifiers tal:condition="python:hasattr(view, 'hasIdentifiers') and view.hasIdentifiers()">
								<input class="action_button" type="submit"
									name="PID_delete"
									i18n:attributes="value" value="Delete selected" />
								<input class="action_button" type="submit"
									name="PID_clear"
									i18n:attributes="value" value="Delete all" />
							</tal:hasidentifiers>
					   </td>
					</tr>
				</tfoot>
            </table>
        </div>
    </div>
</body>
</html>

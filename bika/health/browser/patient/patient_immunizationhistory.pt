<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	metal:use-macro="here/main_template/macros/master" i18n:domain="bika">
<body class="template-immunizationhistory">

	<metal:content-core fill-slot="content-core">
    <form name="immunizationhistory" method="POST">

    	<div class="field">
	    	<tal:hasepinumber tal:condition="python:hasattr(view, 'getEPINumber')">
				<label i18n:translate="">EPI Number</label>
				<span class="fieldRequired" title="Required"
					i18n:attributes="title"
					i18n:translate="">(Required)</span>
				<input type="text" name="EPINumber" size="30"
					tal:attributes="value python: view.getEPINumber()"/>
			</tal:hasepinumber>
		</div>

		<div id="folderlisting-main-table">
            <input tal:replace="structure context/@@authenticator/authenticator" />
            <input type="hidden" name="submitted" value="1"/>
			<div class="bika-listing-table-container">
				<table summary="Content listing" style="margin-bottom: 0px;"
					class="bika-listing-table">
					<thead>
						<tr>
							<th>&nbsp;</th>
							<th class="sortable column"
							    id="foldercontents-Immunization-column"
							    style="width:40%">
                                <span i18n:translate="">Immunization</span>
                                <span class="fieldRequired">&nbsp;</span>
							</th>
							<th class="sortable column"
							    id="foldercontents-VaccinationCenter-column"
							    style="width:40%">
                                <span i18n:translate="">Vaccination Center</span>
                            </th>
							<th class="sortable column" i18n:translate=""
							    id="foldercontents-Date-column"
							    style="width:16%">
								Date</th>
						</tr>
					</thead>

					<tbody class="item-listing-tbody"
							tal:define="global index python:-1">
                        <tr tal:repeat="row context/getImmunizationHistory">
                        	<td>
                            	<input class="noborder" type="checkbox"
                            		name="SelectItem" id="SelectItem"
                            		tal:define="global index python:index+1;"
                            		tal:attributes="
                            			id python:'SelectItem-%s'%(index);
                            			name python:'SelectItem-%s'%(index);"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active Immunization">
                                 <span tal:content="row/Immunization"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active VaccinationCenter">
                                 <span tal:content="row/VaccinationCenter"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active Date">
                                 <span tal:content="row/Date"/>
                            </td>
                        </tr>
                        <tr id="new">
                        	<td style="padding-bottom:15px;">&nbsp;</td>
                            <td colspan="1" rowspan="1" class="state-active Immunization">
                                 <input class="wide" id="Immunization" type="text" value="" autocomplete="off"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active VaccinationCenter">
                                 <input class="wide" id="VaccinationCenter" type="text" value="" autocomplete="off"/>
                            </td>
                            <td colspan="1" rowspan="1" class="state-active Date">
                                 <input class="datepicker_nofuture" id="Date" type="text" value="" autocomplete="off"/>
                            </td>
					</tbody>
					<tfoot>
						<tr>
							<td class="noborder workflow_actions" colspan="5"  style="padding:5px;">
								<input class="action_button add_row allowMultiSubmit"
							       type="submit"
								   i18n:attributes="value"
								   value="Add" />
								<tal:hashistory tal:condition="python:hasattr(view, 'hasImmunizationHistory') and view.hasImmunizationHistory()">
									<input class="action_button" type="submit"
										name="delete"
										i18n:attributes="value" value="Delete selected" />
									<input class="action_button" type="submit"
										name="clear"
										i18n:attributes="value" value="Delete all" />
								</tal:hashistory>
						   </td>
						</tr>
					</tfoot>
				</table>
			</div>
		</div>
		<input class="action_button" type="submit"
			i18n:attributes="value" value="Save immunization history" />

		<tal:hasremarks tal:condition="python:hasattr(context, 'Remarks')">
			<tal:remarks
				define="
			field python:context.Schema()['Remarks'];
			errors python:{};">
				<p style="margin-top: 2em;" />
				<metal:widget
					use-macro="python:context.widget('Remarks', mode='edit')" />
			</tal:remarks>
		</tal:hasremarks>
    </form>
	</metal:content-core>

</body>
</html>
